[flake8]
max-line-length = 100
extend-ignore =
    # E203: whitespace before ':' (conflicts with Black)
    E203,
    # E501: line too long (handled by Black)
    E501,
    # W503: line break before binary operator (conflicts with Black)
    W503,
    # E731: do not assign a lambda expression (sometimes useful)
    E731

exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .eggs,
    .tox,
    .mypy_cache,
    .pytest_cache,
    experiments

per-file-ignores =
    # Allow unused imports in __init__.py files
    __init__.py:F401,F403
    # Allow long lines in test files for readability
    tests/*.py:E501

max-complexity = 15
count = True
statistics = True
